<div class="row"></div>

<div class="row center-align">
	<div>Welcome</div>
	<div>to</div>
	<div>Overcome Gravity</div>
</div>

{{#if auth.isAuthenticated}}
	<div class="row">
		<div class="col s12 center-align">
			Signed in as {{auth.user.name}}
		</div>
	</div>
	<div class="row">
		<div class="col s12 center-align">
			Not you? <a {{action "logout"}} style="cursor:pointer;">Sign out</a>
		</div>
	</div>
{{else}}
	{{#if auth.lastUser}}
		<div class="row">
			<div class="col s12 center-align">
				Welcome back {{auth.lastUser.name}}
			</div>
		</div>
		<div class="row">
			<div class="col s12 center-align">
				<button class="btn-large" {{action "login" auth.lastUser.name}}>
					LOGIN
				</button>
			</div>
		</div>
		<div class="row">
			<div class="col s12 center-align">
				Not you? <a {{action "login"}} style="cursor:pointer;">Sign in as a different user</a>
			</div>
		</div>
		<div class="row">
			<div class="col s12 center-align">
				or
			</div>
		</div>
		<div class="row">
			<div class="col s12 center-align">
				<a {{action "tryAsGuest"}} style="cursor:pointer;">Try as a guest</a>
			</div>
		</div>
	{{else}}
		<div class="row">
			<div class="col s12 center-align">
				<button class="btn-large" {{action "login"}}>
					{{if auth.isGuestUser "SIGN UP FOR FREE" "LOGIN"}}
				</button>
			</div>
		</div>
	{{/if}}
{{/if}}

{{#if auth.isGuestUser}}
	<div class="row center-align">
		OR
	</div>

	<div class="row">
		<div class="col s12 center-align">
			{{#if auth.isFirstTimeUser}}
				<button {{action "tryAsGuest"}} class="btn">
					TRY AS GUEST
				</button>
			{{else}}
				{{link-to "Continue using as guest" "workouts"}}
			{{/if}}
		</div>
	</div>
{{/if}}
