{{#each maxes as |max|}}
<li>
	<div class="card">
		<div class="row">
			<div class="col s12">
				<div style="margin-bottom: 10px;margin-top: 10px;">
					<span style="font-size: 1.5em;">{{max.name}}</span>
					{{materialize/material-icon icon="edit" class="right" onClick=(action editMax max)}}
				</div>
			</div>
			<div class="col s12">
				<div class="divider"></div>
			</div>
		</div>
		<div class="row">
			<div class="col s6">
				<span style="font-size: 2em;">{{max.kg}}</span>
				<span style="font-size: 1.25em;">KG</span>
			</div>
			<div class="col s6">
				<span style="font-size: 2em;">{{max.lbs}}</span>
				<span style="font-size: 1.25em;">LBS</span>
			</div>
		</div>
	</div>
</li>
{{/each}}

{{yield}}
